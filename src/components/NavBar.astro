---
const {activePage, ...props} = Astro.props
import "../styles/nav.css"
---

<header class="header">
    <div class="container">
        <div class="logo">
            <a href="/index.html">
                <img src="/imgs/logo.svg" alt="SL Logo" width="50" height="50">
                <h1><span class="highlight">Simon Lomax</h1>
            </a>
        </div>
        <input type="checkbox" id="nav-toggle" class="nav-toggle">
        <label for="nav-toggle" class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </label>
        <nav class="nav">
            <label for="nav-toggle" class="close-menu"></label>
            <ul>
                <li><a href="/index.html" class={activePage === "home" ? "active" : ""}>Home</a></li>
                <li><a href="/blog" class={activePage === "blog" ? "active" : ""}>Blog</a></li>
                <li><a href="/career" class={activePage === "career" ? "active" : ""}>My Career</a></li>
            </ul>
        </nav>
    </div>
</header>